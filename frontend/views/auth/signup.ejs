<div class="row justify-content-center mt-5">
  <div class="col-md-6 col-lg-4">
    <div class="card shadow-sm">
      <div class="card-body">
        <h3 class="mb-4 text-center">Sign Up</h3>
        <form method="POST" action="/auth/signup">
          <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" required>
          </div>
          <div class="mb-3">
            <label for="confirmPassword" class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
          </div>
          <div class="mb-3">
            <label for="otp" class="form-label">OTP Verification Code</label>
            <input type="text" class="form-control" id="otp" name="otp" maxlength="6" pattern="\d{6}" placeholder="Enter OTP if required">
          </div>
          <button type="submit" class="btn btn-primary w-100">Register</button>
        </form>
        <div class="mt-3 text-center">
          <a href="/auth/signin">Already have an account? Login</a>
        </div>
      </div>
    </div>
  </div>
</div> 