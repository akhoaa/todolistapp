<div class="row g-4 mb-4">
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h5 class="card-title">Tasks Today</h5>
        <h2 class="display-5"><%= stats.tasksToday || 0 %></h2>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h5 class="card-title">Completed Tasks</h5>
        <h2 class="display-5 text-success"><%= stats.tasksCompleted || 0 %></h2>
      </div>
    </div>
  </div>
  <div class="col-md-4">
    <div class="card shadow-sm">
      <div class="card-body text-center">
        <h5 class="card-title">Projects</h5>
        <h2 class="display-5 text-primary"><%= stats.projects || 0 %></h2>
      </div>
    </div>
  </div>
</div>

<div class="row g-4 mb-4">
  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-header d-flex justify-content-between align-items-center">
        <span>Quick Create Task</span>
        <a href="/tasks/create" class="btn btn-sm btn-outline-primary">Full Form</a>
      </div>
      <div class="card-body">
        <form id="quickTaskForm" method="POST" action="/tasks">
          <div class="mb-2">
            <input type="text" class="form-control" name="title" placeholder="Task title" required>
          </div>
          <div class="mb-2">
            <input type="date" class="form-control" name="dueDate" value="<%= today %>">
          </div>
          <button type="submit" class="btn btn-primary w-100">Add Task</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-header">Recent Tasks</div>
      <ul class="list-group list-group-flush">
        <% if (recentTasks && recentTasks.length) { %>
          <% recentTasks.forEach(function(task) { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <span><%= task.title %></span>
              <span class="badge rounded-pill <%= task.completed ? 'bg-success' : 'bg-secondary' %>">
                <%= task.completed ? 'Done' : 'Pending' %>
              </span>
            </li>
          <% }) %>
        <% } else { %>
          <li class="list-group-item text-muted">No recent tasks.</li>
        <% } %>
      </ul>
    </div>
  </div>
</div>

<div class="row g-4 mb-4">
  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-header">Statistics</div>
      <div class="card-body">
        <canvas id="taskStatsChart" height="120"></canvas>
      </div>
    </div>
  </div>
  <div class="col-lg-6">
    <div class="card h-100">
      <div class="card-header">Calendar <span class="badge bg-light text-dark ms-2">(coming soon)</span></div>
      <div class="card-body">
        <div class="text-muted">Calendar view will be available in the next version.</div>
      </div>
    </div>
  </div>
</div>

<!-- Chart.js CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
// Chart.js example for statistics (dummy data, replace with real stats)
document.addEventListener('DOMContentLoaded', function() {
  if (window.Chart) {
    const ctx = document.getElementById('taskStatsChart').getContext('2d');
    new Chart(ctx, {
      type: 'doughnut',
      data: {
        labels: ['Completed', 'Pending'],
        datasets: [{
          data: [<%= stats.tasksCompleted || 0 %>, <%= (stats.tasksToday || 0) - (stats.tasksCompleted || 0) %>],
          backgroundColor: ['#198754', '#6c757d']
        }]
      },
      options: {
        plugins: { legend: { position: 'bottom' } }
      }
    });
  }
});
</script> 